@model Apollo.ASPNetCore.Module6.RestaurantReviews.ViewModels.RestaurantViewModel
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <style>
        table, th, td {
            border: 1px groove;
        }
        th {
            background-color: lightgray;
        }
        tr {
            
        }
    </style>
    <title></title>
</head>
<body>
    <h1>@Model.Greeting.GetMessage()</h1>
    <table>
        <thead>Restaurants List</thead>
        <tr></tr>
        <tr>
            <th>Restaurant Name</th>
            <th>Location</th>
        </tr>
        @foreach (var restaurant in @Model.Restaurants)
        {
            <tr>
                <td>@restaurant.RestaurantName</td>
                <td>@restaurant.RestaurantLocation</td>
                <td>
                    <a href="/Restaurant/GetRestaurantDetail/@restaurant.RestaurantId">@restaurant.RestaurantName</a></td>
                 <td>   <a asp-action="GetRestaurantDetail" asp-route-id="@restaurant.RestaurantId">Tag helper</a>
                </td>
            </tr>
        }
    </table>
    <a asp-action="Create">Create a new restaurant</a>
</body>
</html>