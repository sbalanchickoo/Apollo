@using Apollo.ASPNetCore.Module6.RestaurantReviews.Models
@model Restaurant

    <form method="post">
        <div>
        <label asp-for="RestaurantName" ></label>
            <input asp-for="RestaurantName" />
            <span asp-validation-for="RestaurantName"></span>
        </div>
        <div>
            <label asp-for="RestaurantBudget"></label>
            <select asp-for="RestaurantBudget"
                    asp-items="Html.GetEnumSelectList<Budget>()"></select>
            <span asp-validation-for="RestaurantBudget"></span>
        </div>
        <input type="submit" name="Save" value="Save" />
    </form>
